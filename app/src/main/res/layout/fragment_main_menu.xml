<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/main_margin"
    tools:context=".ui.menus.MainMenuFragment">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/optionCreateProfile"
        android:layout_width="300dp"
        android:layout_height="@dimen/menu_btn_height"
        android:text="@string/register_scouts"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/optionViewProfiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/optionViewProfiles"
        android:layout_width="300dp"
        android:layout_height="@dimen/menu_btn_height"
        android:text="@string/see_scouts"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/optionViewProgressDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionCreateProfile" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/optionViewProgressDone"
        android:layout_width="300dp"
        android:layout_height="@dimen/menu_btn_height"
        android:text="@string/scouts_with_merit"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionViewProfiles" />

</androidx.constraintlayout.widget.ConstraintLayout>